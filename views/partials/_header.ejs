<header>

  <head>
    <style>
      header {
        font-size: 1.2em;
      }
    </style>
  </head>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (user) { %>
        <div class="navbar-nav ml-auto"></div>
        <div style="display: flex; align-items: center;">
          <p style="margin-bottom: 0; margin-right: 15px">Logged in as: <%= user.email %>
          </p>
        </div>
        <form class="form-inline" action="/logout" method="POST">
          <button class="btn btn-outline-light" type="submit">Logout</button>
        </form>
    </div>
    <% } else { %>
      <div class="navbar-nav ml-auto">
        <a class="nav-item nav-link" href="/login">Login</a>
        <a class="nav-item nav-link" href="/urls/register">Register</a>
      </div>
      <% } %>
        </div>
  </nav>
</header>